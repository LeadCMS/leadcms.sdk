{
  "name": "@leadcms/sdk",
  "version": "3.0.1",
  "description": "Official SDK and CLI tools for LeadCMS - framework-agnostic content management for static site generators",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "leadcms": "dist/cli/index.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "compile": "tsc && cp -r src/templates dist/ && chmod +x dist/cli/index.js",
    "clean": "rm -rf dist",
    "dev": "npm run build && tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cli": "npm run build && node dist/cli/index.js --help > /dev/null && echo 'âœ… CLI tests passed'",
    "prepublishOnly": "npm run build",
    "leadcms:pull": "node dist/scripts/fetch-leadcms-content.js",
    "leadcms:push": "node dist/scripts/push-leadcms-content.js",
    "leadcms:status": "node dist/scripts/status-leadcms-content.js",
    "leadcms:fetch": "node dist/scripts/fetch-leadcms-content.js",
    "leadcms:watch": "node dist/scripts/sse-watcher.js",
    "leadcms:generate-env": "node dist/scripts/generate-env-js.js"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "diff": "^8.0.2",
    "dotenv": "^16.6.1",
    "eventsource": "^4.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@types/eventsource": "^1.1.15",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.24",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "leadcms.config.json.sample"
  ],
  "keywords": [
    "leadcms",
    "cms",
    "headless-cms",
    "sdk",
    "typescript",
    "content-management",
    "mdx",
    "markdown",
    "json",
    "i18n",
    "localization",
    "static-content",
    "framework-agnostic",
    "static-site-generator",
    "build-time",
    "nextjs",
    "astro",
    "gatsby",
    "nuxt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LeadCMS/leadcms.sdk.git"
  },
  "bugs": {
    "url": "https://github.com/LeadCMS/leadcms.sdk/issues"
  },
  "homepage": "https://github.com/LeadCMS/leadcms.sdk#readme",
  "author": "LeadCMS Team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
